{
    "compilerOptions": {
      "outDir": "./dist/",
      "module": "commonjs",
      "target": "esnext",
      "strict": true,
      "declaration": true,
      "esModuleInterop": true,
      "removeComments": true,
      "noImplicitAny": true,
      "noUnusedLocals": true,
      "noUnusedParameters": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": [
      "src/**/*.ts"
    ]
}